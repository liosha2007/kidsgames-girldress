<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight=".9">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_dialog_email" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:layout_weight=".1"
        android:orientation="horizontal">

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".9">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="fill_parent"
                    android:drawable="@android:color/tertiary_text_dark"
                    android:src="@android:drawable/sym_call_outgoing" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="fill_parent"
                    android:drawable="@android:color/secondary_text_light"
                    android:src="@android:drawable/sym_call_outgoing" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="fill_parent"
                    android:drawable="@android:color/secondary_text_dark"
                    android:src="@android:drawable/sym_call_outgoing" />
            </LinearLayout>
        </HorizontalScrollView>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight=".0">

            <TableRow>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#aaaa00"
                    android:src="@android:drawable/screen_background_dark_transparent" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#00aa00"
                    android:src="@android:drawable/screen_background_dark_transparent" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#aaaa00"
                    android:src="@android:drawable/screen_background_dark_transparent" />
            </TableRow>

            <TableRow>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#00aa00"
                    android:src="@android:drawable/screen_background_dark_transparent" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#aaaa00"
                    android:src="@android:drawable/screen_background_dark_transparent" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#00aa00"
                    android:src="@android:drawable/screen_background_dark_transparent" />
            </TableRow>

            <TableRow>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#aaaa00"
                    android:src="@android:drawable/screen_background_dark_transparent" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#00aa00"
                    android:src="@android:drawable/screen_background_dark_transparent" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#aaaa00"
                    android:src="@android:drawable/screen_background_dark_transparent" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>